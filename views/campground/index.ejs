<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('../partials/skull') -%>
    <div class="container" style="margin-top: 30px">
      <header class="jumbotron">
        <div class="container">
          <h1>Welcome to yelpCamp!</h1>
          <p>view our hand-picked campground from all over the world</p>
          <p>
            <a class="btn btn-primary btn-large" href="/campgrounds/new"
              >add new campground</a
            >
          </p>
        </div>
      </header>
      <div class="row text-center">
        <% campground.forEach(campground => { %>
        <div class="col-md-3 col-sm-6">
          <div class="img-thumbnail">
            <img class="img-thumbnail" src="<%= campground.img %>" />
            <div class="caption"><h4><%= campground.name %></h4></div>

            <p>
              <a
                href="/campgrounds/<%= campground._id %> "
                class="btn btn-primary"
                >More Info</a
              >
            </p>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
